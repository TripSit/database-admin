{
  "name": "database_admin",
  "version": "1.0.0",
  "description": "Adminstration of the postgres database.",
  "main": "src/start.ts",
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  },
  "engines": {
    "node": "v20.5.0",
    "npm": "9.8.0"
  },
  "scripts": {
    "# Start #": "",
    "rebuild:postgres": "docker compose --project-name tripbot up -d --force-recreate --build database",
    "rebuild:knex": "docker compose --project-name tripbot up -d --force-recreate --build database_knex",
    "rebuild:api": "docker compose --project-name tripbot up -d --force-recreate --build database_api",
    "rebuild:pgadmin": "docker compose --project-name tripbot up -d --force-recreate --build database_pgadmin",
    "rebuild:all": "docker compose --project-name tripbot up -d --force-recreate --build",
    "# API #": "",
    "start": "rimraf dist && swc ./src -d ./dist && node --inspect=0.0.0.0 dist/index.js",
    "test": "jest --silent -c ./src/testing/jest.unit.config.ts --detectOpenHandles",
    "lint": "npx eslint . --fix --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "logs": "docker logs database_api -f -n 100",
    "# Knex #": "",
    "d:update": "docker exec -it database_knex npm run updateChain",
    "d:seed:run": "docker exec -it database_knex npx knex --knexfile ./src/knexfile.ts seed:run",
    "d:seed:make": "docker exec -it database_knex npx knex --knexfile ./src/knexfile.ts seed:make init -x ts --",
    "d:migrate:make": "docker exec -it database_knex npx knex --knexfile ./src/knexfile.ts migrate:make appeals",
    "d:migrate:latest": "docker exec -it database_knex npx knex --knexfile ./src/knexfile.ts migrate:latest",
    "d:migrate:up": "docker exec -it database_knex npx knex --knexfile ./src/knexfile.ts migrate:up",
    "d:migrate:down": "docker exec -it database_knex npx knex --knexfile ./src/knexfile.ts migrate:down",
    "d:migrate:rollback": "docker exec -it database_knex npx knex --knexfile ./src/knexfile.ts migrate:rollback --all",
    "d:prisma:pull": "docker exec -it database_knex npx prisma db pull && docker exec -it database_api npx prisma db pull",
    "d:prisma:generate": "docker exec -it database_knex npx prisma generate && docker exec -it database_api npx prisma generate",
    "d:prisma:studio": "docker exec -it database_knex npx prisma studio",
    "d:postgres:console": "docker exec -it database psql -h localhost -U postgres -d webapp_dev",
    "d:types": "docker exec -it database_knex npx ts-node --transpile-only ./src/types/generateDefintions.ts",
    "# Database #": "",
    "migrate": "npm run migrate:latest && npm run prisma:pull && npm run prisma:generate && npm run types && tail -f /dev/null",
    "migrate:latest": "npx knex --knexfile ./src/knexfile.ts migrate:latest",
    "prisma:pull": "npx prisma db pull",
    "prisma:generate": "npx prisma generate",
    "types": "npx ts-node --transpile-only ./src/types/generateDefintions.ts",
    "redo": "npm run migrate:rollback && npm run migrate:latest && npm run seed:run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TripSit/database-admin"
  },
  "keywords": [
    "Harm",
    "Reduction",
    "Bot",
    "Database"
  ],
  "author": "Eric / Moonbear / Teknos <eric@tripsit.me>",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "argon2": "^0.30.3",
    "body-parser": "^1.20.2",
    "common-tags": "^1.8.2",
    "cross-fetch": "^4.0.0",
    "databank": "^1.0.9",
    "databank-redis": "^0.19.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "knex": "^2.5.1",
    "knex-types": "^0.5.0",
    "luxon": "^3.3.0",
    "morgan": "^1.10.0",
    "objection": "^3.1.1",
    "pg": "^8.11.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "tripsit-uat": "file:..",
    "typescript": "^5.1.6",
    "underscore": "^1.13.6",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.71",
    "@types/common-tags": "^1.8.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/luxon": "^3.3.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.5",
    "@types/source-map-support": "^0.5.6",
    "@types/supertest": "^2.0.12",
    "@types/underscore": "^1.11.6",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.46.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-google": "^0.14.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-sonarjs": "^0.19.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prisma": "^5.0.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.4"
  }
}
